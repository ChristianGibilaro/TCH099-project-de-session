<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <!-- Main Content Container -->
    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Header and Profile Info -->
        <LinearLayout
            android:id="@+id/AllExceptScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Left Column: Username & Profile Image -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUsernameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="User123"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle_image_bg"
                    android:clipToOutline="true"
                    android:contentDescription="@string/profile_picture_desc"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defaultaccount" />
            </LinearLayout>

            <!-- Right Column: Statistics and Description -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Row for Friends and Participation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Friends Block -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvFriendsLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Friends"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvFriendsValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Participation Block -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvParticipationLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Participation"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvParticipationValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="439"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Description Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDescriptionValue"
                        android:layout_width="wrap_content"
                        android:layout_height="76dp"
                        android:layout_marginTop="4dp"
                        android:text="This is a sample description for the user profile."
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Score Area (RatingBar + "Add content:" + Add Button) -->
        <LinearLayout
            android:id="@+id/Score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:isIndicator="true"
                android:minWidth="150dp"
                android:numStars="5"
                android:rating="4"
                android:scaleX="0.35"
                android:scaleY="0.35"
                android:stepSize="1"
                android:translationX="-70dp" />

            <!-- Container for "Add content:" and Add Button, shifted left by 40dp -->
            <LinearLayout
                android:id="@+id/addContainer"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:translationX="-40dp">

                <TextView
                    android:id="@+id/tvAddContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Add content:"
                    android:textSize="14sp"
                    android:translationY="20dp" />

                <ImageView
                    android:id="@+id/btnAdd"
                    android:layout_width="61dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/add_icon_desc"
                    android:padding="8dp"
                    android:src="@drawable/add" />
            </LinearLayout>
        </LinearLayout>

        <!-- Photo Grid Section (Square Container) -->
        <com.example.lab1.SquareFrameLayout
            android:id="@+id/squareContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photoGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="4dp"
                android:scrollbars="vertical" />
        </com.example.lab1.SquareFrameLayout>

    </LinearLayout>

    <!-- Fixed Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80808080"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Logout Icon -->
        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="32dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="@string/logout_icon_desc"
            android:scaleType="centerInside"
            android:src="@drawable/logout" />

        <!-- Messages Icon -->
        <ImageButton
            android:id="@+id/btnMessages"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="@string/messages_icon_desc"
            android:scaleType="centerInside"
            android:src="@drawable/message" />
    </LinearLayout>

</LinearLayout>
