<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".TeamHubActivity">

    <ScrollView
        android:id="@+id/scrollViewMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#272727">

        <LinearLayout
            android:id="@+id/layoutScrollContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/bannerContainer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="9dp">

                <ImageView
                    android:id="@+id/imgBanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/missingimage" />

                <LinearLayout
                    android:id="@+id/layoutBannerTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="114dp">

                    <TextView
                        android:id="@+id/tvActivityTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACTIVITY TITLE"
                        android:textColor="#FF8300"
                        android:textSize="35sp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to the ACTIVITY TITLE team hub,"
                android:textColor="#1900FF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/layoutDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description-text-not-int"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <View
                    android:id="@+id/redLine"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#FF0004" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTopButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnQuickTeams"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="29dp"
                    android:background="@drawable/bg_stroke_red_corners"
                    android:paddingVertical="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvQuickTeams"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Quick Teams"
                        android:textColor="#1900FF"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnLegions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_stroke_red_corners"
                    android:paddingVertical="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLegions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Legions"
                        android:textColor="#1900FF"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBottomSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/bg_stroke_blue_solid"
                android:paddingTop="15dp"
                android:paddingBottom="329dp"
                android:paddingHorizontal="16dp">

                <LinearLayout
                    android:id="@+id/btnQuickTeams2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_stroke_red_corners"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="9dp">

                    <TextView
                        android:id="@+id/tvQuickTeams2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Teams"
                        android:textColor="#1900FF"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPlayersReady"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:gravity="center"
                    android:text="232 players ready to drop"
                    android:textColor="#FF0004"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/layoutHeaderRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_stroke_blue_corners"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="17dp">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="23dp"
                        android:text="Name"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvDifficulty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Difficulty"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvPartyCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="1/4"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imgPlayerIcon"
                        android:layout_width="30dp"
                        android:layout_height="22dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/playericon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
