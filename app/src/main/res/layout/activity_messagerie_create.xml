<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F5"
    tools:context=".MessagerieCreate">

    <!-- Spacer equivalent to the height of a conversation bubble (60dp) -->
    <View
        android:id="@+id/spacerCreateMessage"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <!-- Main container: Conversation Form -->
    <LinearLayout
        android:id="@+id/layoutConversationFormCreateMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_container_createmessage"
        android:orientation="vertical"
        android:paddingTop="34dp"
        android:paddingBottom="24dp">

        <!-- Container for text fields -->
        <LinearLayout
            android:id="@+id/layoutConversationDetailsCreateMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <!-- Title and input field for the conversation name -->
            <LinearLayout
                android:id="@+id/layoutTitleAndInputCreateMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCreateConversationTitleCreateMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="1dp"
                    android:text="Créer une conversation"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etConversationNameCreateMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_edittext_createmessage"
                    android:hint="Nom de la conversation ..."
                    android:inputType="text"
                    android:paddingVertical="23dp"
                    android:paddingLeft="19dp"
                    android:paddingRight="38dp"
                    android:textColor="#636468"
                    android:textSize="13sp" />

                <!-- Member addition field + button -->
                <LinearLayout
                    android:id="@+id/layoutAddMemberCreateMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="1dp"
                    android:background="@drawable/bg_edittext_border_createmessage"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="19dp"
                    android:paddingVertical="8dp">

                    <EditText
                        android:id="@+id/etMemberPseudoCreateMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Entrez un pseudo ..."
                        android:inputType="text"
                        android:paddingVertical="11dp"
                        android:textColor="#66686C"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/btnAddMemberCreateMessageContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_add_member_button_createmessage"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="9dp">

                        <TextView
                            android:id="@+id/tvAddMemberSymbolCreateMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textColor="#000000"
                            android:textSize="17sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Additional info field (non-editable) where added pseudos appear -->
                <EditText
                    android:id="@+id/etAdditionalInfoCreateMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_edittext_createmessage"
                    android:enabled="false"
                    android:inputType="text"
                    android:paddingVertical="6dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="26dp"
                    android:textColor="#66686C"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAddButtonCreateMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="36dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/bg_button_createmessage"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="8dp"
                android:paddingTop="7dp"
                android:paddingBottom="17dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="-0dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvAddButtonLabelCreateMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ajouter"
                    android:textColor="#FFFEFE"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Bouton "Ajouter" aligné à la même largeur que le bloc ci-dessus -->
    </LinearLayout>
</LinearLayout>
