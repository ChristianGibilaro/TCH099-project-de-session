<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMessageItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/rounded_item_convo_bg">

    <!-- Sender's profile image -->
    <ImageView
        android:id="@+id/imgSender"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_image_bg"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/defaultaccount" />

    <!-- Container for date and message text -->
    <LinearLayout
        android:id="@+id/layoutMessageTextContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Date display (non-editable) -->

        <!-- Message content -->
        <TextView
                android:id="@+id/tvSenderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sender name"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="14sp" />
        <TextView
            android:id="@+id/tvMessageContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message goes here"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>
